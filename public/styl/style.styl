body
  font-family 'Avenir', Helvetica, Arial, sans-serif
  font-size 14px

#app
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  text-align center
  color #2c3e50
  margin-top 50px
  .badge
    display inline-block
    min-width 10px
    padding 5px 10px
    font-size 12px
    font-weight 700
    line-height 1
    color #fff
    text-align center
    white-space nowrap
    vertical-align middle
    background-color #777
    border-radius 10px
    &.red
      background #DB2828
    &.green
      background #21BA45
    &.blue
      background #2185D0
  h2
    font-size 18px
    font-weight 400
  ul
    list-style-type none
    padding 0
    li
      display inline-block
      margin 0 10px
      a
        text-decoration none
